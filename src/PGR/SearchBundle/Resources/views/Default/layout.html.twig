<!DOCTYPE html>
<html lang="en" data-ng-app="AccessionsApp">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{{ "head.title"|trans }}</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css">
    {% stylesheets "@PGRSearchBundle/Resources/public/css/*" %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
</head>
<body data-ng-controller="SearchController">
<div id="loading" class="la-anim-1"></div>
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">{{ "navbar.toggle"|trans }}</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">{{ "navbar.title"|trans }}</a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav float-right">
                <li><a href="/en">{{ "navbar.english"|trans }}</a></li>
                <li><a href="/az">{{ "navbar.azerbaijani"|trans }}</a></li>
                <li><a href="/logout"><span class="glyphicon glyphicon-log-out" title="{{ "navbar.logout"|trans }}"></span></a></li>
            </ul>
        </div>
    </div>
</div>
<div class="container">
    <div class="starter-template">
        {% block content %}{% endblock %}
    </div>
</div>
<script type="text/javascript">
    //TODO: Should settings like locale also be retrieved via AJAX queries?
    var locale = "{{ locale }}";
</script>
{% javascripts
    "@PGRSearchBundle/Resources/public/js/jquery-2.1.1.min.js"
    "@PGRSearchBundle/Resources/public/js/angular.min.js"
    "@PGRSearchBundle/Resources/public/js/angular-animate.min.js"
    "@PGRSearchBundle/Resources/public/js/bindonce.min.js"
    "@PGRSearchBundle/Resources/public/js/aftermainscripts/*"
%}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
</body>
</html>